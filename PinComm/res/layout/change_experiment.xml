<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="700dp"
   	android:layout_height="300dp"
   	android:gravity="center"
    android:layout_gravity="center">
    
    <RelativeLayout
    	android:id="@+id/experiment_layout_root"
   	 	android:layout_width="match_parent"
   	 	android:layout_height="match_parent"
   	 	android:layout_gravity="center"
   	 	android:gravity="center">
    
    	<TextView
	        android:id="@+id/experiment_prompt"
	        android:layout_width="match_parent"
	        android:layout_height="100dip"
	   	    android:layout_centerInParent="true"
	        android:layout_marginTop="10dip"
	        android:gravity="center"
	        android:text="Please enter the experiment ID you wish to upload your data to:"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#FFFFFF" />
    	
    	<EditText
    	    android:id="@+id/new_eid"
    	    android:layout_below="@id/experiment_prompt"
    	    android:layout_width="150dp"
    	    android:background="@null"
    	    android:maxLength="5"
    	    android:layout_height="wrap_content"
    	    android:layout_centerInParent="true"
    	    android:layout_marginBottom="10dip"
    	    android:gravity="center"
    	    android:textColor="#FFFFFF"
    	    android:inputType="phone"
    	    android:digits="1234567890"
    	    android:imeOptions="actionDone"
    	    />
		
		<LinearLayout
		    android:id="@+id/experiment_button_layout"
		    android:layout_below="@id/new_eid"
		    android:layout_marginTop="10dp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
		    android:gravity="center">
	
			<Button 
			    android:id="@+id/experiment_ok"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:textAppearance="?android:attr/textAppearanceMedium"
		    	android:layout_weight="1"
		    	android:text="OK" />

			<Button
		    	android:id="@+id/experiment_cancel"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="Cancel"
			    android:textAppearance="?android:attr/textAppearanceMedium" />	
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>