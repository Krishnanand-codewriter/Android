<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:radius="10dp">

    <LinearLayout
        android:id="@+id/ll_data_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listelement_border"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout 
	        android:id="@+id/dataPointHeader"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">

	        <TextView
	            android:id="@+id/pointNumber"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Data Point: " />
	        
	        <Button
	            android:id="@+id/deletePoint"
	            android:layout_width="20dp"
	            android:layout_height="25dp"
	            android:background="@drawable/red_x"
	            android:layout_alignParentRight="true"/>
        
        </RelativeLayout>
        
    </LinearLayout>

</FrameLayout>