<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/ll_data_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        card_view:cardElevation = "14.5sp">
        <!--android:background="@drawable/listelement_border"-->


        <RelativeLayout 
	        android:id="@+id/dataPointHeader"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">

	        <TextView
	            android:id="@+id/pointNumber"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Data Point: " />
	        
	        <Button
	            android:id="@+id/deletePoint"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:background="@drawable/red_x"
	            android:layout_alignParentRight="true"/>
        
        </RelativeLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>
