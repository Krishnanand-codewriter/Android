<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textview_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittext_key"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:text="@string/key" />
    
    <EditText
        android:id="@+id/edittext_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/textview_key"
        android:digits="@string/digits_restriction"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="40"
        android:paddingLeft="6dip"
        android:singleLine="true" />

    <LinearLayout
         android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_key"
        android:orientation="horizontal"
        android:weightSum="2">
		<Button
            android:id="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="@android:string/cancel" />
		
        <Button
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="@string/add_key" />
        
    </LinearLayout>

    <ListView
        android:id="@+id/lv_keys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons"
        android:orientation="vertical"
        android:padding="15dp" >

    </ListView>
    

</RelativeLayout>