<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_no_stroke" >

    <ImageView
        android:id="@+id/manual_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/blank_desc"
        android:scaleType="center"
        android:src="@drawable/logo_white" />

    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manual_logo"
        android:layout_marginLeft="2dp"
        android:paddingTop="8dp"
        android:text="@string/loggedInAs"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/experimentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginLabel"
        android:layout_marginLeft="2dp"
        android:paddingBottom="8dp"
        android:text="@string/usingExperiment"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/experimentLabel" >

        <Button
            android:id="@+id/manual_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/save"
            android:textSize="20sp" />

        <Button
            android:id="@+id/manual_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/upload"
            android:textSize="20sp" />

        <Button
            android:id="@+id/manual_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clear"
            android:textSize="20sp" />
    </LinearLayout>
    
    <EditText 
        android:id="@+id/manual_session_name"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLayout"
        android:inputType="text"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz -_.,01234567879()"
        android:hint="@string/enterSessionName"
        android:maxLength="150"
        android:gravity="left"/>

    <ScrollView
        android:id="@+id/scroll_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/manual_session_name" >

        <LinearLayout
            android:id="@+id/field_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>