<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:baselineAligned="false"
    android:keepScreenOn="true"
    android:orientation="horizontal"
    android:weightSum="2" >

    <LinearLayout
        android:id="@+id/leftLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ImageViewLogo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".75"
            android:background="@android:color/transparent"
            android:contentDescription="@string/iSENSELogo"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_red"
            tools:ignore="NestedWeights" />

        <RelativeLayout
            android:id="@+id/layoutBelowImageEncapsulator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight=".25"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true" >

                <EditText
                    android:id="@+id/sessionName"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz -_.,01234567879()"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_holo"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:hint="@string/session_name"
                    android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#999999"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/sampleInterval"
                    android:digits=".1234567890"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit_text_holo"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:hint="@string/sample_rate"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:maxLength="8"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#999999" />

                <EditText
                    android:id="@+id/testLength"
                    android:digits=".1234567890"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit_text_holo"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:hint="@string/record_length"
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:maxLength="7"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#999999" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:text="@+string/timeElapsed"
                android:textColor="@android:color/white"
                android:textSize="14dip"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <Button
            android:id="@+id/startStop"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/colorless"
            android:text="@+string/startString"
            android:textColor="@android:color/white"
            android:textSize="30dip" />
    </LinearLayout>

</LinearLayout>